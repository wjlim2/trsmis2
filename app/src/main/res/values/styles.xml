<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <style name="AppSYTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppSYThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">#d3e7f4</item>
    </style>

    <style name="AppSYThemeIntro" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <!-- edit text 테마 -->
    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#acacac</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColorHighlight">@color/colorGray</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:colorFocusedHighlight">@color/colorPrimary</item>
    </style>

    <!-- edit text 테마 -->
    <style name="EditTextStyleR" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/colorC4c4c4</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- edit text 테마 -->
    <style name="EditTextStyleB" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#acacac</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorC4c4c4</item>
        <item name="android:textColorHighlight">@color/colorC4c4c4</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:colorFocusedHighlight">@color/colorPrimary</item>
    </style>

    <!-- edit text 테마 -->
    <style name="EditTextStyleRTrsmis" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/color999999</item>
        <item name="android:textColor">@color/color888888</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <!--Error Dialog 테마-->
    <style name="CustomTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextViewR" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextViewB" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextViewEB" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/ebold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="navbar_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_top</item>
    </style>

</resources>
